<script>
    //<!--SECCION CREAR APROBACIONES-->
    function creaapr() {
        document.getElementById('formCrearAprobacion').style.display = 'block';
        document.getElementById('formModAprobacion').style.display = 'none';
        document.getElementById('formElimapro').style.display = 'none';
        document.getElementById('formConsulapro').style.display = 'none';
    }
    //< !--SECCION MODIFICAR APROBACIONES-- >
    function modapr() {
        document.getElementById('formCrearAprobacion').style.display = 'none';
        document.getElementById('formModAprobacion').style.display = 'block';
        document.getElementById('formElimapro').style.display = 'none';
        document.getElementById('formConsulapro').style.display = 'none';
    }
    //<!--SECCION ELIMINAR APROBACIONES-->
    function eliminaapr() {
        document.getElementById('formCrearAprobacion').style.display = 'none';
        document.getElementById('formModAprobacion').style.display = 'none';
        document.getElementById('formElimapro').style.display = 'block';
        document.getElementById('formConsulapro').style.display = 'none';
    }
    //<!--SECCION CONSULTAR APROBACIONES-->
    function consulapro() {
        document.getElementById('formCrearAprobacion').style.display = 'none';
        document.getElementById('formModAprobacion').style.display = 'none';
        document.getElementById('formElimapro').style.display = 'none';
        document.getElementById('formConsulapro').style.display = 'block';
    }
</script>