<script>
    //<!--SECCION CREAR ACCIONES-->
    function creaaccion() {
        document.getElementById('formCrearAccion').style.display = 'block';
        document.getElementById('formModAccion').style.display = 'none';
        document.getElementById('formElimaccion').style.display = 'none';
        document.getElementById('formConsulaccio').style.display = 'none';
    }
    //<!--SECCION MODIFICAR ACCIONES-->
    function modaccion() {
        document.getElementById('formModAccion').style.display = 'block';
        document.getElementById('formCrearAccion').style.display = 'none';
        document.getElementById('formElimaccion').style.display = 'none';
        document.getElementById('formConsulaccio').style.display = 'none';
    }
    //<!--SECCION ELIMINAR ACCIONES-->
    function elimaccion() {
        document.getElementById('formElimaccion').style.display = 'block';
        document.getElementById('formModAccion').style.display = 'none';
        document.getElementById('formCrearAccion').style.display = 'none';
        document.getElementById('formConsulaccio').style.display = 'none';
    }
    //<!--SECCION CONSULTAR ACCIONES-->
    function consulaccion() {
        document.getElementById('formConsulaccio').style.display = 'block';
        document.getElementById('formModAccion').style.display = 'none';
        document.getElementById('formCrearAccion').style.display = 'none';
        document.getElementById('formElimaccion').style.display = 'none';
    }
</script>
