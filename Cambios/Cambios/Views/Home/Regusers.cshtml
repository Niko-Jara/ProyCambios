                    </select>

                    <label>Rol</label>
                    <select class="form-control" id="slectRol">
                        <option selected disabled>Rol</option>
                        <option value="0">Administrador</option>
                        <option value="1">Usuario</option>
                        <option value="2">Tecnico</option>
                    </select>
                </div>
                <button type="button" id="btnSig" class="btn btn-dark" style="margin-top:60px ; margin-left:620px;" onclick="mostruser()">Regresar<<</button>
                <button type="button" id="btnSig" class="btn btn-dark" style="margin-top:60px ">Limpiar</button>
