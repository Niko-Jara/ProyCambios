<form class="container body-content" id="formUser">
    <fieldset>
        <!--SECCION MENU MOSTRAR SECCIONES-->
        <div id="secuser">

            <!--SECCION MOSTRAR SECCION PRINCIPAL -->
            <div id="formUsuarios">
                <legend>Registro de usuarios</legend>
                <button type="button" id="btnCrear" class="btn btn-dark" onclick="mostruser()">Crear</button>
                <button type="button" id="btnMod" class="btn btn-dark" onclick="modper()">Modificar</button>
                <button type="button" id="btnElim" class="btn btn-dark" onclick="elimper()">Eliminar</button>
                <button type="button" id="btnReg" class="btn btn-dark" onclick="nomostrar()">Regresar</button>
            </div>

            <!--CREACION DE LOS USUARIOS -->
            <div id="CreaUser">
                <legend>Informacion general</legend>

                <!--INFO PERSONAL -->
                <div class="col-md-4">
                    <legend>Datos Personales</legend>

                    <label>Identificacion</label>
                    <input type="text" class="form-control" id="txtIdperson" required>

                    <label>Nombre</label>
                    <input type="text" class="form-control" id="txtNombre" required>

                    <label>Primer Apellido</label>
                    <input type="text" class="form-control" id="txtApellido1" required>

                    <label>Segundo Apellido</label>
                    <input type="text" class="form-control" id="txtApellido2" required>

                    <label>Estado</label>
                    <select class="form-control" id="slectEst">
                        <option selected disabled>Estado</option>
                        <option value="0">Desabilitado</option>
                        <option value="1">Habilitado</option>
                    </select>
                </div>

                <!--CONTACTO-->
                <div class="col-md-4">
                    <legend>Contacto</legend>

                    <label>Correo</label>
                    <input type="text" class="form-control" id="txtCorreo" required>

                    <label>Tipo_Correo</label>
                    <select class="form-control" id="slectCorreo">
                        <option selected disabled>Estado</option>
                        <option value="0">Personal</option>
                        <option value="1">Laboral</option>
                    </select>

                    <label>Estado Correo</label>
                    <select class="form-control" id="slectEstemail">
                        <option selected disabled>Estado</option>
                        <option value="0">Desabilitado</option>
                        <option value="1">Habilitado</option>
                    </select>

                </div>

                <!--EMPRESA RELACIONA AL USUARIO SOLO EMPRESA-->
                <div class="col-md-4">
                    <legend>Empresa Relacionada</legend>

                    <label>Id_Empresa</label>
                    <input type="text" class="form-control" id="txtId_Empresa" required>

                    <label>Nombre Empresa</label>
                    <input type="text" class="form-control" id="txtNombreemp" required>

                    <label>Fecha_Creacion</label>
                    <input class="form-control" type="date" id="txtFecemp" name="trip-start" value="2018-07-22" min="2018-01-01" max="2018-12-31">

                    <label>Estado_Empresa</label>
                    <select class="form-control" id="slectEmpresa">
                        <option selected disabled>Estado</option>
                        <option value="0">Desabilitado</option>
                        <option value="1">Habilitado</option>
                    </select>
                </div>
                <button type="button" id="btnSig" class="btn btn-dark" style="margin-top:150px ; margin-left:700px;" onclick="esconuser()">Siguiente >></button>
            </div>

            <!--SE CREAN CREDENCIALES DE USUARIO-->
            <div id="crealogin">
                <legend>Credenciales de Usuario</legend>

                <div class="col-md-6" style="margin-left:310px ; margin-top:40px;">
                    <label>Id_Usuario</label>
                    <input type="text" class="form-control" id="txtId_Usuario" required>

                    <label>Nombre Usuario</label>
                    <input type="text" class="form-control" id="txtNomuser" required>

                    <label>Contraseña</label>
                    <input type="text" class="form-control" id="txtPass" required>

                    <label>Fecha_Ingreso</label>
                    <input class="form-control" type="date" id="txtFecing" name="trip-start" value="2018-07-22" min="2018-01-01" max="2018-12-31">

